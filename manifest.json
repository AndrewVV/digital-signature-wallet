{
  "manifest_version": 2,
  "name": "Digital Signature Wallet",
  "description": "First digital signature wallet",
  "version": "0.0.3",
  "default_locale": "en",
  "icons": {
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "page/popup.html"
  },
  "background": {
    "scripts": [
      "build/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "img/*.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
